<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    
    <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div class='button_flexbox'>
    <div>
      <%= form.submit submit_button_text(@post), class: 'button' %>
      <% if @post %>
        <%= link_to('Cancel', request.referer || post_path(@post), class: 'button') %>
      <% end %>
    </div>
  </div>
  
<% end %>